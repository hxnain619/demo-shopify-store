<div class="h-full max-w-2xl mx-auto my-8 p-4 space-y-8">
  <h1 class="font-bold text-3xl text-center my-4">Reset your password</h1>
  {% form 'reset_customer_password' %}
    <div class="flex flex-col items-center gap-4">
      {% if form.errors %}
        <div class="my-4 text-red-500 bg-red-100 shadow-md p-4" role="alert">
          <strong>Errors!</strong>
          <p class="block sm:inline">{{ form.errors | default_errors }}</p>
        </div>
      {% endif %}
      <div class="flex flex-col my-2 w-full">
        <label for="new_password" class="text-base font-medium"> New Password</label>
        <input
          class="border px-3 py-4"
          name="customer[password]"
          id="new_password"
          type="password"
          placeholder="Enter New Password"
        >
      </div>
      <div class="flex flex-col my-2 w-full">
        <label for="confirm_password" class="text-base font-medium"> Confirm Password</label>
        <input
          class="border px-3 py-4"
          name="customer[password_confirmation]"
          id="confirm_password"
          type="password"
          placeholder="Confirm Your Password"
        >
      </div>
      <div class="my-2 w-full">
        <button
          type="submit"
          class="border-2 border-black bg-black text-white font-medium text-center hover:bg-white hover:text-black p-4 w-full cursor-pointer"
        >
          Save your password
        </button>
      </div>
    </div>
  {% endform %}
</div>
