<div class="mb-8">
  {% if section.settings.contact_title != blank %}
    <div class="text-3xl font-medium my-8 text-center">{{ section.settings.contact_title }}</div>
  {% endif %}
  {% form 'contact' %}
    <div class="flex-1 mx-auto items-center justify-center max-w-4xl px-4">
      {% if form.errors %}
        <div class="border p-5">
          <div class="flex flex-row items-center justify-center w-full my-3">
            <div class="text-red-500">
              {% render 'icon-failed' %}
            </div>
            <div class="text-sm font-medium ml-3">Oh no! Your form was not submitted</div>
          </div>
          <ul class="px-4 mb-3 ml-7 list-decimal">
            {% for error in form.errors %}
              <li>
                <span>{{ form.errors.messages[error] }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% elsif form.posted_successfully? %}
        <div class="flex flex-row items-center justify-center w-full my-3 p-5">
          <div class="text-green-500">
            {% render 'icon-success' %}
          </div>
          <div class="text-sm font-medium ml-3">Form has been submitted, successfully</div>
        </div>
      {% endif %}

      <div class="px-1 md:flex mb-3">
        <div class="px-3 md:w-1/2">
          <label for="comment_author" class="text-gray-700 font-medium uppercase text-xs mb-2">Name</label>
          <input
            type="text"
            name="contact[name]"
            id="comment_author"
            class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none"
            placeholder="Jane Doe"
            required
          >
        </div>
        <div class="px-3 md:w-1/2">
          <label for="comment_email" class="text-gray-700 font-medium uppercase text-xs mb-2">Email</label>
          <input
            type="email"
            name="contact[email]"
            id="comment_email"
            class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none"
            placeholder="jane@doe.com"
            required
          >
        </div>
      </div>
      <div class="px-1 md:flex mb-3">
        <div class="md:w-full px-3">
          <label for="comment_content" class="text-gray-700 font-medium uppercase text-xs mb-2">Message</label>
          <textarea
            class="w-full text-gray-700 resize-none h-20 py-2 px-3 focus:outline-none border"
            name="contact[body]"
            id="comment_content"
            required
          ></textarea>
        </div>
      </div>
      <div class="px-1 md:flex mb-3">
        <div class="md:w-full px-3">
          <input
            type="submit"
            class="w-full cursor-pointer p-4 border text-base font-medium text-white bg-black hover:bg-white hover:text-black"
            value="Submit"
          >
        </div>
      </div>
    </div>
  {% endform %}
</div>

{% schema %}
{
  "name": "Contact form",
  "settings": [
    {
      "type": "text",
      "id": "contact_title",
      "label": "Title"
    }
  ],
  "presets": [
    {
      "name": "Contact Form"
    }
  ]
}
{% endschema %}
