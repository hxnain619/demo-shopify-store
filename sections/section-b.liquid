<div class="bg-[#F8F8F8] py-4">
  <div class="max-w-6xl mx-auto my-4 px-4">
    <div class="flex flex-col-reverse md:flex-row gap-3">
      <div class="w-full md:w-1/2 px-2">
        <h1 class="text-custom-lg leading-[120%]">{{ section.settings.heading }}</h1>
        <p class="my-3">
          {{ section.settings.description }}
        </p>
        <div class="my-14">
          <h2 class="text-custom-md">Key Points:</h2>
          <div class="flex flex-col gap-4 my-4">
            <div class="flex gap-8 items-center justify-start">
              <h1 class="text-[33px] text-primary">{{ section.settings.key_point_1_percentage }}</h1>
              <p class="text-custom-sm">
                {{ section.settings.key_point_1_text }}
              </p>
            </div>
            <div class="flex gap-8 items-center justify-start">
              <h1 class="text-[33px] text-primary">{{ section.settings.key_point_2_percentage }}</h1>
              <p class="text-custom-sm">
                {{ section.settings.key_point_2_text }}
              </p>
            </div>
            <div class="flex gap-8 items-center justify-start">
              <h1 class="text-[33px] text-primary">{{ section.settings.key_point_3_percentage }}</h1>
              <p class="text-custom-sm">
                {{ section.settings.key_point_3_text }}
              </p>
            </div>
          </div>
        </div>
        <div class="rounded-md text-center bg-primary p-2 text-white text-custom-sm">
          {{ section.settings.cta_text }}
        </div>
      </div>
      <div class="w-full md:w-1/2">
        <img
          height="auto"
          width="auto"
          class="rounded-md w-full md:max-w-[570px] max-h-[570px]"
          src="{% if section.settings.image != blank %}{{ section.settings.image | img_url: 'medium' }}{% else %}{{ 'img-2.png' | asset_url }}{% endif %}"
        >
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Nutrition Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Nutrition is the foundation for longer, healthier lives in dogs."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Invest in your dog's future with our scientifically formulated superfood-powered supplements. Give them the nutrition they deserve and watch them thrive with vitality, energy, and the joy of a longer, healthier life."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "Recommended size: 570x570px"
    },
    {
      "type": "header",
      "content": "Key Points"
    },
    {
      "type": "text",
      "id": "key_point_1_percentage",
      "label": "Key Point 1 Percentage",
      "default": "97%"
    },
    {
      "type": "textarea",
      "id": "key_point_1_text",
      "label": "Key Point 1 Text",
      "default": "Dogs choose our dog food over leading brands because of its real functional ingredients and delicious flavor."
    },
    {
      "type": "text",
      "id": "key_point_2_percentage",
      "label": "Key Point 2 Percentage",
      "default": "84%"
    },
    {
      "type": "textarea",
      "id": "key_point_2_text",
      "label": "Key Point 2 Text",
      "default": "Our dog food provides superior nutrition and a patented probiotic for optimal nutrient absorption."
    },
    {
      "type": "text",
      "id": "key_point_3_percentage",
      "label": "Key Point 3 Percentage",
      "default": "92%"
    },
    {
      "type": "textarea",
      "id": "key_point_3_text",
      "label": "Key Point 3 Text",
      "default": "Our dog food's high protein and fat digestibility contribute to ideal stool quality."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Call to Action Text",
      "default": "Give your furry friend the gift of wholesome nutrition"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Nutrition Section",
      "category": "Content",
      "settings": {}
    }
  ]
}
{% endschema %}
